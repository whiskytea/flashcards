doctype html
head
    title Flash Cards
    link(rel='stylesheet' href='/static/stylesheets/style.css')
header
    img(src='/static/img/logo.png')
    p An app to help you study
section.namecard
    .namecard-hello
        p.namecard-greeting Welcome #{name}!
        form.namecard-exit(action='/signOut' method='POST')
            button(type='submit')
                img(src='/static/img/close.svg')
section.flashcards
    .card.card-answer
        .card-header
        h1.card-title Answer
        #content
            h2 &lt; script &gt;
        .card-flip-wrap
            a(href='href=`/card/${id}?side=question')
                img.card-flip(src='img/flip.svg')
        .card-next
            a(href='/error')
                img(src='/static/img/next.svg')
    script(src='app.js')
